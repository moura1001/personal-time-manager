{
    "compilerOptions": {
        "target": "ES6", /* Specify the ECMAScript target version */
        "module": "ESNext", /* Specify module code generation */
        "outDir": "./dist", /* Redirect output structure to the "dist" directory */
        "rootDir": "./src/static", /* Specify the root directory of input files */
        "strict": true, /* Enable all strict type-checking options */
        "esModuleInterop": true, /* Emit __importStar and __importDefault helpers for runtime Babel use */
        "skipLibCheck": true, /* Skip type checking of declaration files */
        "forceConsistentCasingInFileNames": true, /* Ensure consistent file casing */
        "declaration": true, /* Generate type declaration files (.d.ts) */
        "allowSyntheticDefaultImports": true /* Allow default imports from modules with no default export */
        
        /* Additional options you may need:
      "sourceMap": true,          Generate source maps
      "moduleResolution": "node", Specify module resolution strategy (for Node.js)
      "jsx": "react",             Enable JSX support (if using React)
      "types": [],                Specify type declaration files to include
      "lib": [],                  Specify the library files to include (e.g., "dom", "esnext")
      */
    },
    "include": [
        "src/static/**/*.ts" /* Include TypeScript files under "src" directory */
    ],
    "exclude": [
        "node_modules" /* Exclude the "node_modules" directory */
    ]
}